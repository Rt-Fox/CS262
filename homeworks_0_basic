#для проверки кода использовался сайт https://try.ruby-lang.org/


# 1. Fixnum(Integer)

$num = 1 #переменная, $ - условное обозначение числа
puts $num #вывод переменной
#--> 1

#Метод, увеличивающий число на единицу
puts $num+1 #вывод переменной + 1
puts $num.next  #вывод следующего числа
#--> 2

#Метод проверяющий является ли число нулём
$num = 0
puts $num.nonzero? #если число нуль, ничего не выводит, если не нуль, выводит само число
#-->
puts $num.zero? #если число нуль выводи true, иначе false
#-->true

#Метод возвращающий модуль числа
$num = -1
puts $num.abs #модуль числа
#--> 1



# 2. Float
$num = 2.1

#Метод, округляющий вещественное число вниз до целой части
puts $num.floor #Возвращает наибольшее целое число, которое меньше или равно num
#--> 2

$num = -2.1
puts $num.floor #--> -3

#Метод, возвращающий результат деления 2-х чисел в виде массива с целой частью и остатком от деления
$num = 10
$aNumeric = 7
puts $num.divmod( $aNumeric ) #Возвращает массив, состоящий из результата целочисленного деления и остатка от деления числа num на число aNumeric.
#--> [1, 3]



# 3. String
str = "Я - строка"

#Метод, приводящий все символы в строке к нижнему регистру
puts str.downcase   #--> все символы верхнего регистра заменены на соответствующие символы нижнего.
#--> я - строка

#Метод, возвращающий следующий символ за текущим (согласно кодам ASCII)
puts str.succ
#--> Я - строкб
puts str.next
#--> Я - строкб
puts "1999zzz".next     #--> "2000aaa"

#Метод изменяющий текущий объект строки, путём удаления предшествующих и завершающих пробельных символов
str = "    hello    "
puts str.strip   #--> "hello"



# 4. Array

#Метод, удаляющий все встречающиеся элементы в массиве равные заданному
@arr = ["a", "a", "b", "b", "c"]
puts @arr.delete("b") #--> "b"
puts @arr #--> ["a", "a", "c"]

#Метод, возвращающий текущий массив с элементами в случайном порядке
@arr = ["R", "A", "M", "A"]
puts @arr.shuffle  #--> ["A", "A", "R", "M"]
puts @arr #--> ["R", "A", "M", "A"]

#Метод, превращающий массив в строку путём объединения его элементов
@arr = ["R", "A", "M", "A"]
puts @arr.join  #--> "RAMA"
puts @arr.join("-")  #--> "R-A-M-A"



# 5. Hash

#Метод, проверяющий наличие заданного ключа в хэше
hsh = { "a" => 100, "b" => 200}
puts hsh.member?("a")   #--> true
puts hsh.member?("z")   #--> false

#Метод, объединяющий 2 объекта хэшей

hsh = { "a" => 100, "b" => 200}

other_hash = {"z" => 1000}
hsh.merge(other_hash)
#--> {"a"=>100, "b"=>200, "z"=>1000}

other_hash = {"a" => 1000}
hsh.merge(other_hash)
#--> { "a" => 1000, "b" => 200}



# 6. Range

#Метод, возвращающий максимальное значение диапазона
rng = (1..15)
puts rng.max  #--> 15
rng = (1...15) #не включает последнее занчение
puts rng.max  #--> 14



# 7. Модифицировать код

#Модифицировать код таким образом, чтобы вывод на экран соответствовал виду

results = [10, 2, 5, 12, 11, 11, 4]
@i = 0
for sum in results
    puts "Index #{@i = @i + 1}: Value #{sum}"
end
#-->
#Index 1: Value 10
#Index 2: Value 2
#Index 3: Value 5
#Index 4: Value 12
#Index 5: Value 11
#Index 6: Value 11
#Index 7: Value 4